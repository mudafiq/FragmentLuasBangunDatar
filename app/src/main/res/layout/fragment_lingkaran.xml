<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.codeplus.fragmentluasbangundatar.LingkaranFragment">

    <Button
        android:id="@+id/bHitung"
        android:padding="16dp"
        android:text="Hitung"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etJari"
        android:padding="16dp"
        android:layout_toLeftOf="@id/bHitung"
        android:layout_margin="10dp"
        android:inputType="numberDecimal"
        android:hint="inputkan jari-jaris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvHasilLingkaran"
        android:layout_below="@id/etJari"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
